%table
    %caption
        Parent details for
        %span.parent_name= "#{@parent.firstname} #{@parent.lastname}"


    %tr
        %th.parentinfo Name
        %th.parentinfo Home Address
        %th.parentinfo Primary Phone Number
        %th.parentinfo Secondary Phone Number
        %th.parentinfo Primary Email
        %th.parentinfo Secondary Email

    %tr
        %td.parentinfo= "#{@parent.firstname} #{@parent.lastname}"
        %td.parentinfo= "#{@parent.street}, #{@parent.city}, #{@parent.state}, #{@parent.zipcode}"
        %td.parentinfo= "#{@parent.phone}"
        %td.parentinfo= "#{@parent.cell}"
        %td.parentinfo= "#{@parent.email}"
        %td.parentinfo= "#{@parent.email2}"
%br
=link_to("Edit Parent Information", edit_parent_path(@parent), :class => 'btn btn-default')

%br
%br
%table
    %caption Children
    %tr
        -if @children.length > 0
            %th.parentinfo Name
            %th.parentinfo DOB
            %th.parentinfo Status
            -#%th Program
        -else
            %th.parentinfo No children registered yet.

    -@children.each do |x|
        %tr.child.parentinfo
            %td.name.parentinfo= link_to("#{x.firstname} #{x.lastname}", parent_child_path(@parent, x))
            %td.dob.parentinfo= x.dob
            %td.status.parentinfo= x.status
            -# %td= x.program
%br
=link_to("Register a Child", new_parent_child_path(@parent), :class => 'btn btn-default')
