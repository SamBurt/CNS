-if flash[:warning]
    %h2= "#{flash[:warning]}"

-if flash[:notice]
    %h2= "#{flash[:notice]}"

%h2 Update or correct parent information

=form_for @parent, :method => :put do |f|
    .field
        =f.label :name, "Name"
        =f.text_field :name

    .field
        =f.label :address, "Home Address"
        =f.text_field :address

    .field
        =f.label :phone, "Primary Phone Number"
        =f.text_field :phone

    .field
        =f.label :cell, "Secondary Phone Number"
        =f.text_field :cell

    .field
        =f.label :email, "Primary Email"
        =f.text_field :email

    .field
        =f.label :email2, "Secondary Email"
        =f.text_field :email2

    .field
        =f.submit
