#main

  %h3.header Registration

  =form_for @child, :method => :post do |c|
    .field
      =c.label :name, "Child's Name"
      =c.text_field :name

    .field
      =c.label :dob, "Date of Birth"
      =c.date_field

    .field
      =c.label :address, "Address"
      =c.text_field :address

    .field
      =c.label :phone, "Phone"
      =f.telephone

    .field
      =c.label :cell, "Cell"
      =c.telephone

    .field
      =c.label :email, "Email"
      =c.email_field :email_field

    .field
      =c.label :email2, "Second Email"
      =c.email_field :email_field

    .field
      =c.label :program, "Program Enrollment"
      =c.select options={"10 Month", "Summer"}

    .field
      =c.label :child_age, "Child Class"
      =c.select options={"Infant", "Early Childhood", "Post HCS Pre-K", "HCS After-school"}

    .field
      %p 10 Month Program Days
      =c.label :monday :tuesday :wednesday :thursday :friday "5 Day"
      =c.check_box :monday :tuesday :wednesday :thursday :friday

    .field
      =c.label :monday :wednesday :firday "3 Day"
      =c.check_box :monday :wednesday :friday

    .field
      =c.label :tuesday :thursday "2 Day"
      =c.check_box :tuesday :thursday

      %p Full Day:    7:30 AM -  5:30 PM
      %p Half Day:    7:30 AM - 12:30 PM  or  12:30 PM - 5:30 PM
      %p Post Pre-K:  11:30 AM - 5:30 PM

    .field
      =c.label :time, "Day Length"
      =c.select options={"Full Day", "Half Day Morning", "Half Day Afternoon", "Post HCS Pre-K"}

    .field
      %p After School
      =c.label :monday, "Monday"
      =c.check_box :monday

    .field
      =c.label :tuesday, "Tuesday"
      =c.check_box :tuesday
    .field
      =c.label :wednesday, "Wednesday"
      =c.check_box :wednesday
    .field
      =c.label :thursday, "Thursday"
      =c.check_box :thursday
    .field
      =c.label :friday, "Friday"
      =c.check_box :friday
      %br
    .field
      %p Summer Program
      =c.label :w1, "Week 1"
      =c.check_box :w1
    .field
      =c.label :w2, "Week 2"
      =c.check_box :w2
    .field
      =c.label :w3, "Week 3"
      =c.check_box :w3
    .field
      =c.label :w4, "Week 4"
      =c.check_box :w4
    .field
      =c.label :w5, "Week 5"
      =c.check_box :w5
    .field
      =c.label :w6, "Week 6"
      =c.check_box :w6
    .field
      =c.label :w7, "Week 7"
      =c.check_box :w7
    .field
      =c.label :w8, "Week 8"
      =c.check_box :w8
    %br
    .field
      =c.label :comments, "Additional Information"
      =c.text_area :comments

    .field
      =c.label :signature
      =c.text_field
    .field
      =c.submit "Register"
